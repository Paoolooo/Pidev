{% extends 'base.html.twig' %}

{% block title %}Hello MesssagesController!{% endblock %}

{% block bodyMessagerie %}
    <section id="page-hero" class="about-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title text-center">
                        <h1>messagerie <span></span></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="container">
        <div class="row">
            <div class="col-12">

                <h2>Boîte de réception</h2>
                <p>Vous avez reçu
                    {{ app.user.received|length }}
                    messages</p>
            </div>
            <div class="col-3">De</div>
            <div class="col-3">Sujet</div>
            <div class="col-3">Date</div>
            <div class="col-3">Actions</div>
            {% for message in app.user.received %}
                {% set bold = "" %}
                {% if message.isRead == 0 %}
                    {% set bold = "fw-bold" %}
                {% endif %}

                <div class="col-3 {{bold}}">{{ message.sender.email }}</div>
                <div class="col-3 {{bold}}">
                    <a href="{{ path("read", {id: message.id}) }}">{{ message.title }}</a>
                </div>
                <div class="col-3 {{bold}}">{{ message.createdAt|date }}</div>
                <div class="col-3">
                    <a href="{{ path("delete", {id: message.id}) }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                        <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"/>
                    </svg>
                    </a>

                </div>
            {% endfor %}


            <div class="col">
                <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                    Voir mes dossiers
                </a>
                <a href="{{path("send")}}" class="btn btn-primary">Envoyer un message</a>
            </div>
        </div>
    </section>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes Dossier</h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="list-group">
            <a href="{{ path("app_messsages") }}" class="list-group-item-action ">Acceuil</a>
        </div>
        <div class="list-group">
            <a href="{{ path("received") }}" class="list-group-item-action active">Boite de reception</a>
        </div>
        <div class="list-group">
            <a href="{{ path("sent" ) }}" class="list-group-item-action ">Eléments envoyés</a>
        </div>

    </div>
    </div>
{% endblock %}
