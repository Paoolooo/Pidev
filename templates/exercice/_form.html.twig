<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $(document).ready(function () {

        $('#exercice_Save').click(function () {

            var nom =$('#exercice_nom').val();
            var difficulte =$('#exercice_difficulte').val();
            var description =$('#exercice_description').val();



            if ((nom.length<5)||((nom.length>15)))
            {
                swal({
                    title: 'Error!',
                    text: 'nom:il faut au moin 5 caractere et max 15',
                    icon: 'error',
                    button: {
                        text: "Continue",
                        value: true,
                        visible: true,
                        className: "btn btn-primary"
                    }
                });
                return false;


            }
            if ((difficulte.length<5)||((difficulte.length>15)))
            {
                swal({
                    title: 'Error!',
                    text: 'Difficulte:il faut au moin 5 caractere et max 15',
                    icon: 'error',
                    button: {
                        text: "Continue",
                        value: true,
                        visible: true,
                        className: "btn btn-primary"
                    }
                });
                return false;


            }
            if ((description.length<20)||((description.length>100)))
            {
                swal({
                    title: 'Error!',
                    text: 'Description:il faut au moin 20 caractere et max 100',
                    icon: 'error',
                    button: {
                        text: "Continue",
                        value: true,
                        visible: true,
                        className: "btn btn-primary"
                    }
                });
                return false;


            }
        });
    });
</script>